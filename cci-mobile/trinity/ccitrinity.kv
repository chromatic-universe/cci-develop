Accordion:
    orientation: 'vertical'
    AccordionItem:
        title: 'cci-trinity'
        GridLayout
            orientation: 'horizontal'
            cols: 1
            ActionBar:
                pos_hint: {'top':1}
                background_color: [0,0,0,0]
                ActionView:
                    use_separator: True
                    ActionPrevious:
                        id: cci_action_prev
                        title: 'king console'
                        with_previous: False
                        app_icon: 'king-console32.png'
                    ActionButton:
                        text: 'info'
            Label:
                text: 'tornado http/https/wsgi server \n version 4.4.1'
                halign: 'center'
                size_hint_y: .15
            Label:
                text: 'port 7080'
                id: process_info
                size_hint_y: .15
            ScrollView:
                id: scrlv
                size_hint_y:.55
                TextInput:
                    text: ''
                    size_hint_y: None
                    cursor_blink: True
                    background_color: [0,0,0,0]
                    foreground_color: [1,1,1,1]
                    multiline: True
                    id: status_text
                    font_size: 16
                    readonly: True
                    height: max( (len(self._lines)+1) * self.line_height, scrlv.height)
            Label:
                text: 'servicing:\n cci-maelstrom\n cci-bimini'
                size_hint_y: .15
                halign: 'center'
            Button:
                text: 'bootstrap'
                id: bootstrap_btn
                background_color: [0,1,0,1]
                size_hint_y: .15
                on_press: app._on_start_trinity()