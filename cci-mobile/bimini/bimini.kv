#:import lv kivy.uix.listview
#:import la kivy.adapters.listadapter
#:import ScrollEffect kivy.effects.scroll.ScrollEffect



ScreenManager:

    Screen:
        name: 'desktop'
        Accordion:
            orientation: 'vertical'
            id: cci_bimini_accordion
            AccordionItem
                title: 'remote console'
                ScrollView:
                    effect_cls: ScrollEffect

                    Image:
                        id: desktop
                        nocache: True
                        on_touch_down: app.send_click(args[1])
                        size: self.texture_size
                        size_hint: (None, None)
            AccordionItem:
                title: 'cci-bimini'
                GridLayout
                    orientation: 'horizontal'
                    cols: 1
                    size_hint_y: 1
                    ActionBar:
                        pos_hint: {'top':1}
                        size_hint_y: .1
                        ActionView:
                            use_separator: True
                            ActionPrevious:
                                id: cci_action_prev
                                title: 'king console'
                                with_previous: False
                                on_press: app._on_full_screen()
                                app_icon: 'king-console32.png'
                            ActionButton:
                                icon: 'menu-icon.png'
                                on_press: app.on_connect()
                    GridLayout:
                        orientation: 'horizontal'
                        cols: 2
                        size_hint_y: .60
                        Slider:
                            orientation: 'vertical'
                            id: window_width_slider
                            step: 1
                            min: 100
                            max: 1600
                            value: 480

                        Slider:
                            orientation: 'vertical'
                            id: window_height_slider
                            step: 1
                            min: 100
                            max: 1600
                            value: 785

                        Label:
                            text: 'width: ' + '{0:}'.format( window_width_slider.value )
                        Label:
                            text: 'height: ' + '{0:}'.format( window_height_slider.value )
                    GridLayout:
                        orientation: 'horizontal'
                        cols: 1
                        size_hint_y:  .25
                        Label:
                            text: 'enter ip or address:'
                            halign: 'center'
                            valign: 'middle'
                        TextInput:
                            id: server
                            text: '192.168.0.165'
                            halign: 'center'

