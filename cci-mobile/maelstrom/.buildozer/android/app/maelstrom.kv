ScreenManagement:
    CciScreen:
    NetworkScreen:
    TcpScreen:

<CciScreen>:
    id: cci_screen
    name: 'screen_cci'
    Accordion:
        orientation: 'horizontal'
        id: cci_accordion
        AccordionItem:
            title: 'application'
            Label:
                id: acc_item_session
                text: 'application'
        AccordionItem:
            title: 'tcp'
            Accordion:
                orientation: 'vertical'
                AccordionItem:
                    title: 'syn ack'
                    BoxLayout:
                        orientation: 'vertical'
                        GridLayout
                            orientation: 'horizontal'
                            cols: 2
                            size_hint_y: 0.25
                            Button:
                                id: more_tcp_btn
                                text: '...'
                                font_size: 24
                                color: 1,0,0,1
                                background_color: [0,0,0,0]
                                on_press: app._open_extended_window()
                            Button:
                                id: syn_ack_btn
                                text: 'execute syn ack'
                                color: 1,0,0,1
                                background_color: [0,0,0,0]
                                on_press: app.on_ping_ip_input()
                        BoxLayout
                            orientation: 'horizontal'
                            size_hint_y: .25
                            Label:
                                text: 'show trace:'
                            Switch:
                                active: True
                        BoxLayout
                            orientation: 'horizontal'
                            size_hint_y: 0.15
                            Label:
                                text: 'ttl:'
                            Slider:
                                orientation: 'horizontal'
                                min: 1
                                max: 15
                                value: 5
                        GridLayout
                            orientation: 'horizontal'
                            cols: 1
                            size_hint_y: .35
                            Label:
                                text: 'ip syn ack'
                            TextInput:
                                text: '192.168.0.135'
                                id: ip_input_syn
                                cursor_blink: True
                                readonly: False
                                multiline: False
                AccordionItem:
                    title: 'mini port scan'
                    BoxLayout:
                        orientation: 'vertical'
                        GridLayout
                            orientation: 'horizontal'
                            cols: 2
                            size_hint_y: 0.25
                            Button:
                                id: more_tcp_btn
                                text: '...'
                                font_size: 24
                                color: 1,0,0,1
                                background_color: [0,0,0,0]
                                on_press: app._open_extended_window()
                            Button:
                                id: syn_ack_btn
                                text: 'execute mini scan'
                                color: 1,0,0,1
                                background_color: [0,0,0,0]
                                on_press: app.on_ping_ip_input()
                        BoxLayout
                            orientation: 'horizontal'
                            size_hint_y: 0.25
                            Label:
                                text: 'show trace:'
                            Switch:
                                active: True
                        GridLayout
                            orientation: 'horizontal'
                            cols: 1
                            size_hint_y: .50
                            Label:
                                text: 'ip scan'
                            TextInput:
                                text: '192.168.0.135'
                                id: ip_input_syn
                                cursor_blink: True
                                readonly: False
                                multiline: False
                            Label:
                                text: 'ports'
                            TextInput:
                                text: '443 993'
                                id: port_input_syn
                                cursor_blink: True
                                readonly: False
                                multiline: True


        AccordionItem:
            title: 'network'
            Accordion:
                orientation: 'vertical'
                AccordionItem:
                    title: 'ping'
                    BoxLayout:
                        orientation: 'vertical'
                        GridLayout
                            orientation: 'horizontal'
                            cols: 2
                            size_hint_y: 0.20
                            Button:
                                id: more_ping_btn
                                text: '...'
                                font_size: 24
                                color: 1,0,0,1
                                background_color: [0,0,0,0]
                                on_press: app._open_extended_window()
                            Button:
                                id: ping_btn
                                text: 'execute ping'
                                color: 1,0,0,1
                                background_color: [0,0,0,0]
                                on_press: app.on_ping_ip_input()
                        BoxLayout
                            orientation: 'horizontal'
                            size_hint_y: 0.15
                            Label:
                                text: 'show trace:'
                            Switch:
                                active: True
                        BoxLayout
                            orientation: 'horizontal'
                            size_hint_y: 0.15
                            Label:
                                text: 'greedy trace:'
                            Switch:
                                active: False
                        BoxLayout
                            orientation: 'horizontal'
                            size_hint_y: 0.15
                            Label:
                                text: 'multiple ip:'
                            Switch:
                                active: False
                        BoxLayout
                            orientation: 'horizontal'
                            size_hint_y: 0.15
                            Label:
                                text: 'timeout:'
                            Slider:
                                orientation: 'horizontal'
                                min: 1
                                max: 15
                                value: 1
                        GridLayout
                            orientation: 'horizontal'
                            cols: 1
                            size_hint_y: .30
                            Label:
                                text: 'ip or address:'
                            TextInput:
                                text: 'www.chromaticuniverse.xyz'
                                id: ip_input
                                cursor_blink: True
                                readonly: False
                                multiline: True
                AccordionItem:
                    title: 'ping subnet'
                    BoxLayout:
                        orientation: 'vertical'
                        GridLayout
                            orientation: 'horizontal'
                            cols: 2
                            size_hint_y: 0.20
                            Button:
                                id: more_ping_sub_btn
                                text: '...'
                                font_size: 24
                                color: 1,0,0,1
                                background_color: [0,0,0,0]
                                on_press: app._open_extended_window()
                            Button:
                                id: ping_sub_btn
                                text: 'execute sub ping'
                                color: 1,0,0,1
                                background_color: [0,0,0,0]
                                on_press: app.on_ping_ip_input()
                        BoxLayout
                            orientation: 'horizontal'
                            size_hint_y: 0.15
                            Label:
                                text: 'show trace:'
                            Switch:
                                active: True
                        BoxLayout
                            orientation: 'horizontal'
                            size_hint_y: 0.15
                            Label:
                                text: 'greedy trace:'
                            Switch:
                                active: False
                        BoxLayout
                            orientation: 'horizontal'
                            size_hint_y: 0.15
                            Label:
                                text: 'timeout:'
                            Slider:
                                orientation: 'horizontal'
                                min: 1
                                max: 15
                                value: 1
                        GridLayout
                            orientation: 'horizontal'
                            cols: 1
                            size_hint_y: .30
                            Label:
                                text: 'subnet:'
                            TextInput:
                                text: '192.168.0.35'
                                id: ip_subnet_input
                                cursor_blink: True
                                readonly: False
                                multiline: False

        AccordionItem:
            title: 'datalink'
            id: acc_item_datalink
            Label:
                text: 'data link'
        AccordionItem:
            title: 'stream'
            id: acc_item_physical
            Label:
                text: 'physical layer'
        AccordionItem:
            title: 'cci-maelstrom'
            BoxLayout:
                orientation: 'vertical'
                Carousel:
                    direction: 'left'
                    id: maelstrom_carousel_id
                    BoxLayout:
                        Image:
                            source: 'rabw2.jpg'
                            allow_stretch: True
                    BoxLayout:
                        Image:
                            source: 'ramask.png'
                            allow_stretch: 'True'
                    BoxLayout:
                        Image:
                            source: 'ragilmore.jpg'
                            allow_stretch: 'True'
<NetworkScreen>
    id: network_screen
    name: 'screen_network'
    BoxLayout:
        orientation: 'vertical'
        Image:
            source: 'Male-Face-O4-icon.png'
            on_touch_down: app._manip_extended_window()
        Label:
            text: 'extended network screen'

<TcpScreen>
    id: tcp_screen
    name: 'screen_tcp'
    ActionBar:
        pos_hint: {'top':1}
        ActionView:
            use_separator: True
            ActionPrevious:
                title: 'transport packet manip'
                with_previous: False
                app_icon: 'Male-Face-O4-icon.png'
            ActionOverflow:
            ActionButton:
                icon: 'left-icon.png'
                on_press: app._manip_extended_window()
            ActionButton:
                text: 'classics'
            ActionButton:
                text: 'custom'
            ActionButton:
                text: 'chew packets'
            ActionGroup:
                text: 'visualize'
                ActionButton:
                    text: 'gnuplot'
                ActionButton:
                    text: ''
                ActionButton:
                    text: 'Btn7'