
Accordion:
   orientation: 'horizontal'
   id: cci_accordion
   on_touch_up: app.accordion_touch_up()
   AccordionItem:
      title: 'session'
      Label: 
         id: acc_item_session
         text: 'session'            
   AccordionItem:
      title: 'tcp'
      Label:
         id: acc_item_traceroute
         text: 'tcp'
   AccordionItem:
      title: 'network'
      Accordion:
         orientation: 'vertical'
         AccordionItem:
            title: 'ping'
            BoxLayout:
               orientation: 'vertical'
               Button:
                  id: ping_btn
                  text: 'execute ping'
                  size_hint_y: 0.55
                  on_press: app.on_ping_ip_input()
               BoxLayout
                  orientation: 'horizontal'
                  Label:
                     text: 'show trace:'
                  Switch:
                     active: True
               BoxLayout
                  orientation: 'horizontal'
                  Label:
                     text: 'greedy trace:'
                  Switch:
                     active: False
               BoxLayout
                  orientation: 'horizontal'
                  Label:
                     text: 'multiple ip:'
                  Switch:
                     active: False
               BoxLayout
                  orientation: 'horizontal'
                  Label:
                     text: 'timeout:'
                  Slider:
                     orientation: 'horizontal'
                     min: 1
                     max: 15
                     value: 1
               GridLayout
                  orientation: 'horizontal'
                  cols: 1
                  size_hint_y: 1.25
                  Label:
                     text: 'ip or address:'
                  TextInput:
                     text: 'www.chromaticuniverse.xyz'
					 id: ip_input
                     cursor_blink: True
                     readonly: False
                     multiline: True
         AccordionItem:
            title: 'ping subnet'
            Button:
               id: ping_subnet_btn
               text: 'ping subnet'


   AccordionItem:
      title: 'datalink'
      id: acc_item_datalink
      Label:
         text: 'data link'
   AccordionItem:
      title: 'physical layer'
      id: acc_item_physical
      Label:
         text: 'physical layer'
   AccordionItem:
      title: 'cci-maelstrom'
      BoxLayout:
         orientation: 'vertical'
         Carousel:
            direction: 'left'
            id: maelstrom_carousel_id
            BoxLayout:
               Image:
                  source: 'rabw2.jpg'
                  allow_stretch: True
            BoxLayout:
               Image:
                  source: 'ramask.png'
                  allow_stretch: 'True'
            BoxLayout:
               Image:
                  source: 'ragilmore.jpg'
                  allow_stretch: 'True'